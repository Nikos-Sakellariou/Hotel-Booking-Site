@model LoginProfile

@{
    ViewData["Title"] = "Login";
}

<div id="wrapper">
    <div class="container container-fluid tabcontent">
        <div class="row middle-xs middle">
            <div class="transbox logbox">
                <form method="post" asp-controller="Account" asp-action="Login">
                    <fieldset>
                        <legend>Login</legend>
                        <div class="form-group">
                            <label asp-for="Username">Username:</label><br>
                            <input type="text" asp-for="Username" /><br>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password:</label><br>
                            <input type="password" asp-for="Password" /><br>
                        </div>
                        <div class="form-group">
                            <input asp-for="RememberMe" />Remember me<br>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="signin" value="Sign in" />
                        </div>
                        <div class="form-group text-danger" asp-validation-summary="All"></div>
                        <a asp-area="" asp-controller="Account" asp-action="Register"> Register</a>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
