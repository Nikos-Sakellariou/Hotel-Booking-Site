@model UserRegister

@{
    ViewData["Title"] = "Login";
}

<div id="wrapper">
    <div class="container container-fluid tabcontent">
        <div class="row middle-xs middle">
            <div class="transbox logbox">
                <form method="post" asp-controller="Account" asp-action="Register">
                    <fieldset>
                        <legend>Registration</legend>
                        <div class="form-group">
                            <label asp-for="Username">Username:</label><br>
                            <input type="text" asp-for="Username" /><br>
                            <span class="form-group text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password:</label><br>
                            <input type="password" asp-for="Password" /><br>
                            <span class="form-group text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirmation Password:</label><br>
                            <input type="password" asp-for="ConfirmPassword" /><br>
                            <span class="form-group text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email:</label><br>
                            <input type="email" asp-for="Email" /><br>
                            <span class="form-group text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="signin" value="Sign in" />
                        </div>
                        <div class="form-group text-danger" asp-validation-summary="All"></div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
